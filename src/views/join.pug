extends base


block content   
    if errorMessage     
        span=errorMessage
    form(method="POST")
        input(placeholder="이름", name="name" , type="text", required)
        input(placeholder="이메일", name="email" , type="email", required)
        input(placeholder="닉네임", name="username" , type="text", required)
        input(placeholder="패스워드", name="password" , type="password", required)
        input(placeholder="패스워드 확인", name="password2" , type="password", required)
        input(placeholder="위치", name="location" , type="text", required)
        input(type="submit", value="가입")
    div.auth-switch
        span 이미 계정이 있나요?
        a(href="/login") 바로 로그인하기 &rarr;
